<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:UniversityManagement.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="UniversityManagement.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="University Management System - Login"
        Width="600" Height="900"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3949ab" Offset="0"/>
                        <GradientStop Color="#1a237e" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20,12"/>
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a237e" Offset="0"/>
                        <GradientStop Color="#3949ab" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </Window.Styles>

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0d1117" Offset="0"/>
                <GradientStop Color="#161b22" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid Margin="30" RowDefinitions="Auto,*">
            <Border Grid.Row="0" 
                    Margin="0,0,0,30" 
                    Padding="20,15" 
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a237e" Offset="0"/>
                        <GradientStop Color="#3949ab" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="University Management System" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center" 
                          Foreground="White"/>
            </Border>

            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Width="300"
                       Spacing="15">
                       
                <Border BorderThickness="1" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1e3a8a" Offset="0"/>
                            <GradientStop Color="#1e40af" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Spacing="12">
                        <TextBlock Text="Demo Credentials" 
                                 FontWeight="Bold" 
                                 FontSize="16"
                                 HorizontalAlignment="Center"
                                 Foreground="White"/>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="Teacher Access:" 
                                     FontWeight="SemiBold"
                                     Foreground="#94a3b8"/>
                            <TextBlock Text="Username: janedoe123" 
                                     Margin="10,0,0,0"
                                     Foreground="White"/>
                            <TextBlock Text="Password: 123" 
                                     Margin="10,0,0,0"
                                     Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="Student Access:" 
                                     FontWeight="SemiBold"
                                     Foreground="#94a3b8"/>
                            <TextBlock Text="Username: johnsmith" 
                                     Margin="10,0,0,0"
                                     Foreground="White"/>
                            <TextBlock Text="Password: 123" 
                                     Margin="10,0,0,0"
                                     Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="Username:" 
                          Foreground="#94a3b8"
                          FontWeight="SemiBold"/>
                <TextBox Text="{Binding Username}" />
                
                <TextBlock Text="Password:" 
                          Foreground="#94a3b8"
                          FontWeight="SemiBold"/>
                <TextBox PasswordChar="â€¢" Text="{Binding Password}" />
                
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#ef4444"
                          IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                           
                <Button Content="Login" 
                        Command="{Binding LoginCommand}" 
                        HorizontalAlignment="Center"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
    </Border>
</Window>