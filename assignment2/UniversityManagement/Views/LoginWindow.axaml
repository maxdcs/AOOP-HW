<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:UniversityManagement.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="UniversityManagement.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="University Management System - Login"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
        
    <Border Background="#000000" Padding="20">
        <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*" Margin="10">
            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="University Management System" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
                   
            <!-- Login Form -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Width="300"
                        Spacing="15">
                <TextBlock Text="Username:" />
                <TextBox Text="{Binding Username}" />
                
                <TextBlock Text="Password:" />
                <TextBox PasswordChar="â€¢" Text="{Binding Password}" />
                
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red"
                           IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                           
                <Button Content="Login" 
                        Command="{Binding LoginCommand}" 
                        HorizontalAlignment="Center"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
    </Border>
</Window>