<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:UniversityManagement.ViewModels"
    x:Class="UniversityManagement.Views.TeacherWindow"
    x:DataType="vm:TeacherWindowViewModel"
    Title="Teacher Dashboard"
    Width="1200"
    Height="800">

    <Panel Background="#000000">
        <!-- Main container with fixed width and centered -->
        
            
            <Grid Margin="30" RowDefinitions="Auto,Auto,*">
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Teacher Dashboard" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TemplateTeacher.Name}" FontSize="16"/>
                </StackPanel>
                
                <Border Grid.Row="1" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Add New Subject" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Subject Name:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewSubjectName}" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,0,10,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewSubjectDescription}" Height="60" AcceptsReturn="True"/>
                            
                            <Button Grid.Row="2" Grid.Column="1" Content="Add Subject" 
                                    Command="{Binding AddSubjectCommand}" 
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <Grid Grid.Row="2">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" 
                                BorderBrush="Gray" 
                                BorderThickness="1" 
                                Padding="15" 
                                Margin="0,0,0,10"
                                CornerRadius="5"
                                IsVisible="{Binding IsEditingSubject}">
                            <StackPanel>
                                <TextBlock Text="Edit Subject" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Subject Name:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EditSubjectName}" Margin="0,0,0,5"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,0,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EditSubjectDescription}" Height="60" AcceptsReturn="True"/>
                                    
                                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                        <Button Content="Cancel" 
                                                Command="{Binding CancelEditCommand}" 
                                                Margin="0,0,10,0"/>
                                        <Button Content="Save Changes" 
                                                Command="{Binding SaveSubjectEditCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock DockPanel.Dock="Top" Text="Your Subjects" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding SubjectList}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,3" CornerRadius="3" Width="600">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Opacity="0.8"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button Content="Edit" 
                                                        Command="{Binding Source={x:Static vm:TeacherWindowViewModel.Current}, Path=EditSubjectCommand}" 
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,5,0"/>
                                                <Button Content="Delete" 
                                                        Command="{Binding Source={x:Static vm:TeacherWindowViewModel.Current}, Path=DeleteSubjectCommand}" 
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>
            </Grid>
        
    </Panel>
</Window>